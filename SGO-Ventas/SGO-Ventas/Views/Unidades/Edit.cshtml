@model SGO_Ventas.Models.Unidades

@{
    ViewBag.Title = "Edit";
}

<h2>Create</h2>
@using (Html.BeginForm("Edit", "Unidades", FormMethod.Post))
{
    @Html.HiddenFor(model => model.Id)

    <div class="form-group">
        @Html.LabelFor(m => m.Descripcion, "Descripción")
        @Html.TextBoxFor(m => m.Descripcion, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <td colspan="2"><button type="submit" class="btn btn-primary">Guardar</button></td>
    </div>
}

@Html.ActionLink("Volver al Listado", "Index")