@model SGO_Ventas.Models.Clientes

@using (Html.BeginForm("BuscarCliente", "VentasX", FormMethod.Get))
{
    <div class="panel panel-info">
        <div class="panel-heading">
            Cliente
        </div>
        <div class="panel-body">
            <div class="col-lg-12" style="margin-top:2px;">
                <div class="col-xs-6 col-sm-6 col-md-6">
                    <div class="col-xs-3 col-sm-3 col-md-3 ">
                        <label for="NroDocumento">Nro Documento:</label>
                    </div>
                    <div class="col-xs-9 col-sm-9 col-md-9 ">
                        @if (Model == null)
                        {
                            <input type="number" name="NroDocumento" id="NroDocumento" class="form-control" placeholder="Número Documento" tabindex="2">
                        }
                        else
                        {
                            <input type="number" value="@Model.NroDocumento" name="NroDocumento" id="NroDocumento" class="form-control" placeholder="Número Documento" tabindex="2">
                        }
                    </div>
                </div>
                <button class="btn btn-info btn-sm" data-id="0" tabindex="4">Buscar</button>
            </div>

            <div class="col-lg-12" style="margin-top:2px;">
                <div class="col-xs-6 col-sm-6 col-md-6">
                    <div class="col-xs-3 col-sm-3 col-md-3 ">
                        <label for="RazonSocial">Razón Social:</label>
                    </div>
                    <div class="col-xs-9 col-sm-9 col-md-9 ">
                        @if (Model == null)
                        {
                            <input type="text" name="RazonSocial" id="RazonSocial" class="form-control" placeholder="Razón Social" tabindex="6">
                        }
                        else
                        {
                            <input type="text" value="@Model.RazonSocial" name="RazonSocial" id="RazonSocial" class="form-control" placeholder="Razón Social" tabindex="6">
                        }
                    </div>
                </div>
                <div class="col-xs-6 col-sm-6 col-md-6">
                    <div class="col-xs-3 col-sm-3 col-md-3 ">
                        <label for="Direccion">Dirección:</label>
                    </div>
                    <div class="col-xs-9 col-sm-9 col-md-9 ">
                        @if (Model == null)
                        {
                            <input type="text" name="Direccion" id="Direccion" class="form-control" placeholder="Dirección" tabindex="8">
                        }
                        else
                        {
                            <input type="text" value="@Model.Direccion" name="Direccion" id="Direccion" class="form-control" placeholder="Dirección" tabindex="8">
                        }
                    </div>
                </div>
            </div>
        </div>
        @*<div class="panel-footer">
                Bootstrap
            </div>*@
    </div>
}