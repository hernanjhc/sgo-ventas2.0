@model SGO_Ventas.Models.Usuarios

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>

@using (Html.BeginForm("Create", "Usuarios", FormMethod.Post))
{
    <div class="form-group">
        @Html.LabelFor(p => p.Nombre, "Nombre")
        @Html.TextBoxFor(p => p.Nombre, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(p => p.EMail, "E-Mail")
        @Html.TextBoxFor(p => p.EMail, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(p => p.Password, "Contraseña")
        @Html.TextBoxFor(p => p.Password, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(p => p.NombreCompleto, "Nombre completo")
        @Html.TextBoxFor(p => p.NombreCompleto, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <td colspan="2">
            <button type="submit" class="btn btn-primary">Cargar</button>
        </td>
    </div>
}

@Html.ActionLink("Volver al Listado", "Index")